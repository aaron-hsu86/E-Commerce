@model MyViewModel
<form asp-controller="Order" asp-action="Create" method="post">
    <div class="d-flex gap-3 w-auto align-items-center mb-2">
        <label for="Customer">Customer</label>
        <select name="CustomerId">
            <option value="" disabled selected>--Select a Customer--</option>
            @foreach (Customer c in Model.allCustomers)
            {
            <option value="@c.CustomerId">@c.Name</option>
            }
        </select>
        <label for="Product">Product</label>
        <select name="ProductId">
            <option value="" disabled selected>--Select a Product--</option>
            @foreach (Product p in Model.allProducts)
            {
            <option value="@p.ProductId">@p.Name</option>
            }
        </select>
        <label for="Quantity">Quantity</label>
        <input type="number" name="Quantity">
    </div>
    <span asp-validation-for="allOrders"></span>
    <button class="btn btn-success">Order</button>
</form>