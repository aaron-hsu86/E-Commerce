@{
    ViewData["Title"] = "Orders";
}
@model MyViewModel
<h1><u>Add a new Order</u></h1>
@await Html.PartialAsync("_AddOrder", Model)
<div class="container mt-3">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Order o in Model.allOrders)
        {
            <tr>
                <td>@o.Customer.Name</td>
                <td>@o.Product.Name</td>
                <td>@o.Quantity</td>
                <td>@o.CreatedAt.ToString("MMM d yyyy")</td>
            </tr>
        }
        </tbody>
    </table>
</div>
