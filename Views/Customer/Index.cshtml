@{
    ViewData["Title"] = "Customers";
}
@model List<Customer>
<h1><u>Add a new Customer</u></h1>
@await Html.PartialAsync("_AddCustomer", new Customer())
<div class="container mt-3">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Joined On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Customer c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.CreatedAt.ToString("MMM d yyyy")</td>
                <td>
                    <form asp-controller="Customer" asp-action="Delete" asp-route-customerId=@c.CustomerId>
                        <button class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
